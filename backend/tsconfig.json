{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "typeRoots": ["./node_modules/@types", "./src/types"], 
    "resolveJsonModule": true
  },
  "include": ["src/**/*", "data/database.ts"],
  "exclude": ["node_modules", "dist"]
}
